{
	"$schema": "./src/.vscode/settings.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false, 
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": []
	},
	"files": {
		"ignore": ["package-lock.json"]
	  }
}
